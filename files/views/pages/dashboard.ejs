<section class="top-dashboard">
    <div id="user-dashboard">
        <div class="container">
            <div class="row">
                <div class="col-md-4">

                    <div class="playercard">
                        <div class="playercardwrapper">
                            <div class="top-card">
                                <div class="player-img" style="background: url(<%= avatar %>); background-size: 100%;">
                                </div>
                                <div class="player-title">
                                    <h4>
                                        <%= user["name"] %>
                                    </h4>
                                </div>
                            </div>
                            <div class="under-top-card">

                                <div class="under-top-wrapper">
                                    <a href="" style="color:#e4d6ca"><span id="current-imr"></span> IMR</a>
                                    <a href="">
                                        <i class="fa fa-list"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="mid-card">
                                <svg id="polygon-canvas"></svg>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8" id="matches-graph-container">
                    <div class="row">
                        <div class="all-matches-table col-md-12">
                            <div class="table-wrapper">

                                <div class="row">
                                    <div class="top-table">
                                        <div class="pull-left">
                                            <h4>Your most recent matches</h4>
                                        </div>
                                        <div class="pull-right">
                                            <div class="download-all">
                                                <a href="#" id="queue-matches-button"><i class="fa fa-download" aria-hidden="true"></i> Parse all recent matches</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <br>
                                    <div class="actual-table">
                                        <div id="timeline-container"></div>
                                        <!--<canvas id="matches-graph-canvas"></canvas>-->

                                       <div id="change-nr-matches-container">
                                            <div class="nr-matches nr-matches-selected" id="show-matches-5">5</div>
                                            <div class="nr-matches" id="show-matches-10">10</div>
                                            <div class="nr-matches" id="show-matches-20">20</div>
                                            <div class="nr-matches" id="show-matches-50">50</div>
                                       </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="match-stats">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="main-stats-table">
                    <div class="table-header">
                        <div class="pull-left">
                            <div class="hero-icon pull-left">
                            </div>
                            <div class="match-id pull-left">
                                <h5 >Match ID : <span id="current-match-id"></span></h5>
                            </div>
                        </div>

                        <div class="pull-right">
                            <div class="match-buttons">
                                <a id= "review-link"  href="#" class="match-review"> <i class="fa fa-play" aria-hidden="true"></i>
                                     Match Review</a>
                                <a id= "scoreboard-link" href="#" class="scoreboard"><i class="fa fa-bars" aria-hidden="true"></i> Scoreboard</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="table-body">
                    <div class="col-md-3 table-sidebar">
                        <div class="sidebar-wrapper">
                            <h4>Performance Summary</h4>
                            <div class="stats-sidebar">
                                <ul id="ratings-tabs">
                                    <li class="active">
                                        <a href="#tips" aria-controls="tips" role="tab" data-toggle="tab">Tips</a>
                                    </li>
                                </ul>
                            </div>
<!--

                            <br>
                            <h4>Upcoming Features</h4>

